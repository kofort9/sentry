# Environment Configuration Template
# Copy this file to .env and fill in your values

# LLM Provider Configuration (choose one)
# OpenAI API Key (for remote LLM usage)
# OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (for remote LLM usage)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Groq API Key (for remote LLM usage)
# GROQ_API_KEY=your_groq_api_key_here

# Local LLM Configuration
# Set to true to force local LLM usage (bypasses API keys)
# SENTRIES_FORCE_LOCAL=true

# Simulation Mode (for testing without LLM calls)
# SENTRIES_SIMULATION_MODE=false

# GitHub Configuration (for PR creation)
# GITHUB_TOKEN=your_github_token_here
# GITHUB_USER=your_github_username
# GITHUB_REPO=your_repository_name

# Observability Settings
# OBSERVABILITY_ENABLED=true
# SENTRY_DSN=your_sentry_dsn_here

# Development Settings
# DEBUG=false
# LOG_LEVEL=INFO

# Model Configuration
# MODEL_PLAN=llama3.1:8b-instruct-q4_K_M
# MODEL_PATCH=llama3.1:8b-instruct-q4_K_M
